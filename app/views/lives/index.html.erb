<p id="notice"><%= notice %></p>

<h1>Lives</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Cat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lives.each do |life| %>
      <tr>
        <td><%= life.number %></td>
        <td><%= life.cat %></td>
        <td><%= link_to 'Show', life %></td>
        <td><%= link_to 'Edit', edit_life_path(life) %></td>
        <td><%= link_to 'Destroy', life, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

